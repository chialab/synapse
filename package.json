{
  "name": "@chialab/synapse",
  "version": "3.0.3",
  "type": "module",
  "description": "Application framework built on the top of DNA Web Components.",
  "main": "dist/cjs/synapse.cjs",
  "module": "dist/esm/synapse.js",
  "browser": {
    "node-fetch": false
  },
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/synapse.cjs",
      "node": "./dist/node/synapse.js",
      "default": "./dist/esm/synapse.js"
    }
  },
  "scripts": {
    "build": "rimraf dist && yarn types && rna build",
    "test": "yarn test:browser && yarn test:node",
    "test:browser": "rna test:browser --coverage",
    "test:node": "rna test:node --coverage",
    "types": "rimraf types && tsc",
    "lint": "eslint src",
    "prepack": "yarn build"
  },
  "files": [
    "dist",
    "types",
    "LICENSE",
    "README.md"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chialab/synapse"
  },
  "author": "Chialab <dev@chialab.io> (https://www.chialab.it)",
  "dependencies": {
    "@chialab/dna": "^3.20.0",
    "node-fetch": "^3.0.0",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@chialab/eslint-config": "^3.0.0",
    "@chialab/ginsenghino": "^1.1.0",
    "@chialab/rna": "^0.17.0",
    "@chialab/rna-browser-test-runner": "^0.17.1",
    "@chialab/rna-bundler": "^0.17.0",
    "@chialab/rna-node-test-runner": "^0.17.0",
    "eslint": "^8.0.0",
    "jsdom": "^16.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3"
  }
}
